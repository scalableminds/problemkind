<section class="problem-form before-wish">
  <div class="container">
    <div class="row">
      <div class="answers-complete"></div>
      <form>
        <h2 class="big-question">Tell me, what annoys you?</h2>
        <img class="speech-bar" src="images/speech_bar.svg" class="img-responsive" alt="Responsive image">
        <div class="row">
          <div class="col-md-9">
            <div class="answers-input"></div>
            <div class="pull-right">
              <button type="button" class="btn btn-lg btn-outline-inverse lollipop-button"><span class="icon"></span> Stop asking</button>
              <button type="button" class="btn btn-lg btn-outline-inverse next-button">Ok</button>
            </div>
          </div>
          <div class="col-md-3">
            <div class="pull-left">
              <img class="asking-girl" src="images/girl.svg" class="img-responsive" alt="Responsive image">
            </div>
          </div>  
        </div>
      </form>
    </div>
  </div>
</section>